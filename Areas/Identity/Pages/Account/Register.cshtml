<section class="vh-110" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/login.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h3 fw-bold mb-0">Register a new account</span>
                                    </div>

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                   
                                    <div class="form-group mb-4">
                                        <select class="select form-control-lg" asp-for="Input.Roles" aria-label="Default select example">
                                            <label class="form-label" asp-for="Input.Roles"></label>

                                            <option value="Farmer">Farmer</option>
                                            <option value="Customer">Customer</option>
                                            <option value="Author">Author</option>
                                        </select>

                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        <input asp-for="Input.FirstName" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.FirstName"></label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        <input asp-for="Input.LastName" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.LastName"></label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Email"></label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        <input asp-for="Input.Password" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.Password"></label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Input.ConfirmPassword"></label>
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-dark btn-lg btn-block" >Register</button>

                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Already Register? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                                                             style="color: #393f81;">Login here</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
